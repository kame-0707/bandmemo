<div class="text-center text-xl font-bold mt-10">音声文字起こしの編集</div>

<div class="flex flex-col items-center mt-4">
  <%= form_with model: @voice, local: true do |form| %>
    <div class="mb-4 w-full max-w-md">
      <%= form.label :content, '音声文字起こし'%>
      <%= form.text_area :content, rows: 5, class: "w-full" %>
    </div>
    <div class="flex justify-between w-full max-w-md" style="margin-top: 1cm;">
      <div class="flex-1 mr-2">
        <button class="btn btn-outline btn-success w-full">
          <%= form.submit "編集して保存" %>
        </button>
      </div>
      <div class="flex-1 ml-2">
        <%= link_to voices_path do %>
          <button class="btn btn-outline btn-secondary w-full">音声文字起こし一覧に戻る</button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>