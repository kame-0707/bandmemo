<h1 class="text-center text-xl font-bold mb-4">練習メモ一覧</h1>

<div class="flex justify-center mb-4">
  <div class="flex justify-center mt-auto">
    <%= link_to  new_summary_path do %>
      <button class="btn btn-secondary">新しいメモを作成</button>
    <% end %>
  </div>
</div>

<div class="flex justify-center">
  <%# summary.summary：渡されてきたsummaryオブジェクトの、summaryカラムの中身 %>
  <%# summary_path(summary)：渡されてきたummaryオブジェクトを、showページへ遷移するパスにわたしている %>
  <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4 justify-items-center max-w-4xl mx-auto">
    <% @summaries.each do |summary| %>
      <li class="bg-white shadow-md rounded-lg p-4 w-full max-w-md">
        <div class="flex justify-center mt-auto">
          <%= link_to summary_path(summary) do %>
            <div class="mr-4"><button class="btn btn-outline btn-info">原文はこちら</button></div>
          <% end %>
          <%= link_to edit_summary_path(summary) do %>
            <div class="mr-4"><button class="btn btn-outline btn-success">編集</button></div>
          <% end %>
          <%= link_to summary_path(summary), data: { turbo_method: :delete, turbo_confirm: "削除しますか" } do %>
            <div class="mr-4"><button class="btn btn-outline btn-error">削除</button></div>
          <% end %>
        </div>
        <div class="flex-grow">
              <%= markdown(summary.summary) %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
